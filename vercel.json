{
  "version": 2,
  "builds": [
    {
      "src": "api/mcp.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/mcp",
      "dest": "/api/mcp"
    }
  ],
  "env": {
    "GITHUB_TOKEN": "@github_token",
    "GITLAB_HOST": "@gitlab_host"
  },
  "functions": {
    "api/mcp.js": {
      "maxDuration": 30
    }
  }
}
